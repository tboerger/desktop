#!/usr/bin/env bash
set -eo pipefail

if [ -L $0 ]; then
    ROOT=$(cd $(dirname $(readlink -e $0))/..; pwd)
else
    ROOT=$(cd $(dirname $0)/..; pwd)
fi

if ! which ansible-galaxy >/dev/null; then
    echo "Failed to detect galaxy!"
    exit 1
fi

EXECUTE=$(basename $0)
STRIPPED=${EXECUTE%-galaxy}
MACHINE=${MACHINE:-${STRIPPED}}

if [[ ! -d "${ROOT}/ansible/group_vars/${MACHINE}" ]]; then
    echo "Provided invalid machine!"
    exit 1
fi

pushd "${ROOT}" >/dev/null
    ansible-galaxy \
        collection install \
        -r "${ROOT}/ansible/collections.yml" \
        -p "${ROOT}/collections" \
        "$@"

    ansible-galaxy \
        role install \
        -r "${ROOT}/ansible/requirements.yml" \
        -p "${ROOT}/galaxy" \
        "$@"
popd >/dev/null
