#!/usr/bin/env bash
set -eo pipefail

if [ -L $0 ]; then
    ROOT=$(cd $(dirname $(readlink -e $0))/..; pwd)
else
    ROOT=$(cd $(dirname $0)/..; pwd)
fi

if ! test -f "${ROOT}/env/bin/ansible-later"; then
    echo "Failed to detect later!"
    exit 1
fi

pushd "${ROOT}" >/dev/null
    "${ROOT}/env/bin/ansible-later" "$@"
popd >/dev/null
