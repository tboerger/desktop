#!/usr/bin/env bash
set -eo pipefail

if [ -L $0 ]; then
    ROOT=$(cd $(dirname $(readlink -e $0))/..; pwd)
else
    ROOT=$(cd $(dirname $0)/..; pwd)
fi

if ! which ansible-later >/dev/null; then
    echo "Failed to detect later!"
    exit 1
fi

pushd "${ROOT}" >/dev/null
    exec ansible-later "$@"
popd >/dev/null
