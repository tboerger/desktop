#!/usr/bin/env bash
set -eo pipefail

if [ -L $0 ]; then
    ROOT=$(cd $(dirname $(readlink -e $0))/..; pwd)
else
    ROOT=$(cd $(dirname $0)/..; pwd)
fi

if ! which ansible-inventory >/dev/null; then
    echo "Failed to detect inventory!"
    exit 1
fi

pushd "${ROOT}" >/dev/null
    exec ansible-inventory \
        --inventory-file "ansible/inventory.yml" \
        "$@"
popd >/dev/null
